<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{ student.avatar_url }}"/>
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input type="text" name="name" placeholder="Nome do Aluno" value="{{ student.name }}"/>
  </div>
</div>

<div class="item">
  <div>Email</div>
  <div>
    <input type="email" name="email" value="{{ student.email }}"/>
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{ student.birth }}"/>
  </div>
</div>

<div class="item">
  <div>Ano Escolar</div>
  <div>
    <select name="graduation">
      <option value ="{{teacher.graduation}}">{{ teacher.graduation }}</option>
      <option value="Ensino Médio Completo">Ensino Médio Completo</option>
      <option value="Ensino Superior Completo">Ensino Superior Completo</option>
      <option value="Mestrado">Mestrado</option>
      <option value="Doutorado">Doutorado</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Carga horária</div>
  <div>
    <input type="number" name="carga" placeholder="Numero de horas" value="{{ student.carga }}"/>
  </div>
</div>

<div class="item">
  <div>Tipo de Aula</div>
  <div>
    <span
      ><input type="radio" name="typeclass" value="P" {% if student.typeclass == "P" %} checked {% endif
      %}/>Presencial</span
    >
    <span
      ><input type="radio" name="typeclass" value="A" {% if student.typeclass == "A" %} checked {% endif %}/>À
      distância</span
    >
  </div>
</div>

<div class="item">
  <div>Professor</div>
  <select name="teacher">
    {% for teacher in teacherOptions%}
      <option value="{{teacher.id}}" { if student.teacher_id == teacher.id } selected {endif}>
        {{teacher.name}}
      </option>
      {% endfor%}
    </select>
  </div>

  <button type="submit">Salvar</button>